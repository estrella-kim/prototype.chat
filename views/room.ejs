<% if (isSuccess) {%>
<h3>방제 : <span><%= roomName%></span></h3>
<style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font: 13px Helvetica, Arial; }
    form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
    form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
    form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
    #messages { list-style-type: none; margin: 0; padding: 0; }
    #messages li { padding: 5px 10px; }
    #messages li:nth-child(odd) { background: #eee; }
</style>
<div class="nickname"></div>
<ul id="messages"></ul>
<input id="m" autocomplete="off" /><button>Send</button>
<script src="https://cdn.socket.io/socket.io-1.4.0.js"></script>
<script>
    var room = io.connect('/room');
    var form = document.querySelector('button');
    var message = document.querySelector('#m');
    var socket = io();

    form.addEventListener('click', function(){
        socket.emit('chat message', message.value);
        message.value = '';
        return false;
    })
    function showMessage(msg) {
        document.querySelector('.nickname').innerHTML = '<span>' + msg + '</span>';
    }
    room.on('connect',  function() {
        room.emit('join', {
            roomName : message.value,
            nickname : nickname
        })
    })
    room.on('joined', function(data){
        if(data.isSuccess) {
            showMessage(data.nickname + '님이 입장하셨습니다.');
        }
    })
    socket.on('chat message', function(msg){
        console.log(msg);
        document.querySelector('#messages').innerHTML += `<li>${msg}</li>`;
    });
</script>

<% } else {%>
<script>
    alert("방에 입장할 수 없습니다.");
    location.href = '/enter';
</script>
<% }%>